# .env.example
# 环境变量示例文件
# 复制此文件为.env并填入真实配置

# LLM配置
LLM__API_BASE=http://localhost:8000/v1
LLM__API_KEY=your-api-key-here
LLM__MODEL_NAME=qwen2.5-72b-instruct
LLM__MAX_TOKENS=4000
LLM__TEMPERATURE=0.7
LLM__TIMEOUT=60
LLM__RETRY_TIMES=3

# 数据库配置
DATABASE__URL=sqlite:///fantasy_novel.db
DATABASE__ECHO=false
DATABASE__POOL_SIZE=10

# Redis配置（可选）
REDIS__HOST=localhost
REDIS__PORT=6379
REDIS__DB=0
REDIS__PASSWORD=

# MCP服务器配置
MCP__HOST=0.0.0.0
MCP__PORT=8080
MCP__DEBUG=false
MCP__LOG_LEVEL=INFO

# 小说生成配置
NOVEL__DEFAULT_GENRE=玄幻
NOVEL__CHAPTER_WORD_COUNT=3000
NOVEL__MAX_CHAPTERS=100
NOVEL__AUTO_SAVE=true
NOVEL__CONSISTENCY_CHECK=true

# 应用配置
APP_NAME=FantasyNovel
VERSION=1.0.0
DEBUG=false
